<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :nombre %>
  <%= text_input f, :nombre %>
  <%= error_tag f, :nombre %>

  <%= label f, :ubicacion %>
  <%= text_input f, :ubicacion %>
  <%= error_tag f, :ubicacion %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
